<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="600" height="400" fill="#F0EDCC"/>
  
  <!-- Floor -->
  <rect x="0" y="300" width="600" height="100" fill="#E8E0C0"/>
  
  <!-- Back Wall -->
  <rect x="0" y="0" width="600" height="300" fill="#14444E"/>
  
  <!-- Modern TV -->
  <rect x="150" y="80" width="300" height="180" rx="5" fill="#000000"/>
  <rect x="160" y="90" width="280" height="160" rx="3" fill="#2a4a5a"/>
  
  <!-- TV Content -->
  <rect x="180" y="110" width="240" height="120" fill="#4a6a7a"/>
  <text x="300" y="170" text-anchor="middle" fill="#F0EDCC" font-family="Arial" font-size="14" font-weight="bold">Modern Entertainment</text>
  
  <!-- Floating Console -->
  <rect x="200" y="270" width="200" height="20" rx="3" fill="#0a2227"/>
  
  <!-- Modern Seating -->
  <rect x="100" y="320" width="60" height="40" rx="5" fill="#8b4513"/>
  <rect x="180" y="320" width="60" height="40" rx="5" fill="#8b4513"/>
  <rect x="260" y="320" width="60" height="40" rx="5" fill="#8b4513"/>
  <rect x="340" y="320" width="60" height="40" rx="5" fill="#8b4513"/>
  <rect x="420" y="320" width="60" height="40" rx="5" fill="#8b4513"/>
  
  <!-- Coffee Table -->
  <rect x="250" y="300" width="100" height="20" rx="3" fill="#2a3a2a"/>
  
  <!-- Modern Lighting -->
  <circle cx="300" cy="50" r="15" fill="#F0EDCC"/>
  <circle cx="150" cy="50" r="10" fill="#F0EDCC"/>
  <circle cx="450" cy="50" r="10" fill="#F0EDCC"/>
  
  <!-- Windows -->
  <rect x="50" y="100" width="80" height="120" fill="#E8E0C0"/>
  <rect x="470" y="100" width="80" height="120" fill="#E8E0C0"/>
</svg>